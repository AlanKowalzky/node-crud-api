{
  "name": "basic-testing",
  "version": "1.0.0",
  "description": "Task for mastering unit-tests with Jest, Node.js and Typescript",
  "author": "AlreadyBored",
  "license": "MIT",
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "jest --silent",
    "test:verbose": "jest",
    "build": "tsc",
    "start:dev": "ts-node-dev --respawn src/index.ts",
    "start:prod": "tsc && node dist/index.js",
    "start:multi": "ts-node src/cluster.ts"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.23.3",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.17.46",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "nodemon": "^3.1.10",
    "ts-node-dev": "^2.0.0",
    "uuid": "^11.1.0"
  }
}
